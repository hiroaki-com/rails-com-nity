<h2>ログイン</h2>
<div class="gest-login">
  <%= link_to(users_guest_sign_in_path, method: :post , class: "underline") do %><span class= "button"> ゲストログイン<br>（見ていただく用）</span><% end %>
</div>

<div class= "padding-both-side">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email ,"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "ログイン状態を保持" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class: "button"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<%= link_to '管理者ログイン', "/admin", style: 'margin: 20px 0' %>


</div>
