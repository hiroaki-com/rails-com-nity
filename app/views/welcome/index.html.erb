<div class="content-wrapper">
  <div class="content-block">
   <% @posts.each do |post| %>
    <div class="content">
     <div class="user-about">
       <div class="image">
        <% if post.user.image.attached? %>
         <%= link_to image_tag(post.user.image), new_profile_path %> <%#  ← 新規投稿画面から弾かれ、プロフィール編集画面へ遷移_一覧と詳細で共有 %>
        <% else %>
         <%= link_to image_tag("nouser.png"), new_profile_path %> 
        <% end %>
       </div>
      
       <div class="profile">
        <div class="name-history">
         <div class="name">
          <%= post.id%> : <%= post.user.name %> <%#  ← post.id はユーザーIDではなく、あくまで、投稿のID %>
         </div>
         <div class="learning-history">
          <%= "学習歴 : #{post.user.learning_history}年" %> 
         </div>
       </div>
       <div class="purpose">
        <%= "Rails学習の目的 : #{post.user.purpose}" %>
         
       </div>
      </div> 
     </div>

  <%= link_to("/posts/#{post.id}") do %>
        <div class="text">
          <p><%=safe_join(post.content.split("\n"),tag(:br))%></p>  <%#  ←contentの改行処理 %> 
        </div>
     
     <% if post.images.attached? %>
        <div class="images">
          <% post.images.each do |image| %>
            <%= image_tag image %>
          <% end %>
        </div>
     <% end %>

        <div class="post-times">
           <%= post.created_at.strftime('%Y/%m/%d  %H : %M')%>
        </div>
     </div>
  <% end %>
  <% end %>

  </div>
  
  
  

  <div class="sidebar">
    <div class="sidebar__item"> <%#  ← スライド実装 %>
      
    </div>  <%#  ← スライド実装 %>
    
    <div class="sidebar__item sidebar__item--fixed"> <%#  ← スライド実装 %>
      <div class="box"><p>空</p></div>    <%# 固定・追従させたいエリア %>
      <div class="box"><p>空</p></div>    <%# 固定・追従させたいエリア %>
    </div>

  </div>
</div>
<%# --------------------------------content-wrapper:display-flex%>

<div>
   <p class="skip-top"><%= link_to(root_path) do %><i class="fas fa-home icon fa-1x" title="Top"></i><span class= "hide-sp"> Top</span><% end %></p>
</div>


